

<h1>Atendimentos</h1>

<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Data</th>
      <th>Cliente</th>
      <th>Usuario</th>  
      <th>Atendente</th>
      <th>Area</th>
      <th>Assunto</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @atendimentos.each do |atendimento| %>
     <tr>
        <td><%= atendimento.id %></td>
        <td><%= atendimento.data %></td>
        <td><%= atendimento.cliente.name%></td>
        <td><%= atendimento.usuario.name%></td>
        <td><%= atendimento.atendente.name%></td>
        <td><%= atendimento.area.name%></td>
        <td><%= atendimento.assunto%></td>
        <td><%= link_to 'Mostrar', atendimento %></td>
        <td><%= link_to 'Editar', edit_atendimento_path(atendimento) %></td>
      </tr>
     <% end %>
  </tbody>
</table>
